<Page x:Class="GourmetSearchApplication.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GourmetSearchApplication"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="White"
      Title="検索画面">
    <DockPanel >
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="LogoutButton" Content="ログアウト" Width="100" Height="30" Margin="20" Foreground="White"  Background="OrangeRed"/>
            <Button x:Name="ChangeButton" Content="変更" Width="100" Height="30" Margin="20" Foreground="White"  Background="OrangeRed"/>
            <Button x:Name="FavoriteButton" Content="お気に入り登録" Width="100" Height="30" Margin="20" Foreground="White"  Background="OrangeRed"/>
            <Border BorderThickness="5" BorderBrush="OrangeRed"  Margin="30,10,50,10">
                <TextBlock x:Name="UserNameTextBlock" Text="グルメ太郎様👤" FontSize="30" Height="40"/>
            </Border>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBox x:Name="KeywordTextBox" Width="1600" FontSize="40" Margin="50,0,70,0" local:Placeholder.PlaceHolderText="キーワードを入力してください 例:店舗名、ジャンル、住所、駅名etc"/>
            <Button x:Name="SearchButton" Content="検索" FontSize="40" Width="130"  Foreground="White"  Background="OrangeRed"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock Text="検索結果" FontSize="25" Margin="20,10,10,10"/>
            <TextBlock Text="お気に入り店舗一覧" FontSize="25" Margin="1310,10,10,10"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" HorizontalAlignment="Left">
            <DataGrid x:Name="ResultDataGrid" Width="1400" Margin="20,0,20,20" Background="OrangeRed" AutoGenerateColumns="False"/>
        </StackPanel>
        <StackPanel>
            <DataGrid x:Name="FavoriteStoreNameDataGrid" Height="400"  Margin="0,0,20,0" Background="OrangeRed" AutoGenerateColumns="False"/>
            <TextBlock Text="近くのおすすめ店舗一覧" FontSize="25" Margin="0,10,10,10"/>
            <DataGrid x:Name="NearbyShopDataGrid" Height="400" Margin="0,0,20,20" Background="OrangeRed" AutoGenerateColumns="False"/>
        </StackPanel>
    </DockPanel>
</Page>
